@model E_learning.DomainModels.Material
@{
  ViewBag.Title = "AddMaterialInSection";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
  <br />
  <h5>@Html.ActionLink(ViewBag.Kursi as String, "AllCourses", "Course", null, null)>@Html.ActionLink(ViewBag.Niveli as String, "CourseLevels", "Course", new { id = ViewBag.KursId }, null)>@Html.ActionLink(ViewBag.Tipi as String, "CourseLevelTypes", "Course", new { courseId = ViewBag.KursId, levelId = ViewBag.NivelId }, null)</h5>
  <hr />
  <br />
  <h2>Shto Material</h2>
  <br />
  @using (Html.BeginForm("AddMaterialInSection", "Material", FormMethod.Post, new { enctype = "multipart/form-data" }))
  {
    @Html.AntiForgeryToken()
    <hr />
    @Html.HiddenFor(x => x.SeksioniId)
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-row">
      <div class="form-group col-md-6">
        @Html.LabelFor(x => x.Titulli, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(x => x.Titulli, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Titulli, null, new { @class = "text-danger" })
      </div>
      <div class="form-group col-md-6">
        <input type="file" class="file-input" id="file" name="file" value="@Model.Filename">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        @Html.LabelFor(x => x.Pershkrimi, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextAreaFor(x => x.Pershkrimi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Pershkrimi, null, new { @class = "text-danger" })
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Ruaj" class="btn  btn-warning text-white" /> &nbsp; &nbsp;
        @Html.ActionLink("Anullo", "MaterialsOfSection", "Material", new { id = Model.SeksioniId }, new { @class = "btn btn-primary" })
      </div>
    </div>
  }
</div>




