@model IEnumerable<E_learning.DomainModels.Kurs>
@{
    ViewBag.Title = "My Favorite Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
  <br />
  <h2 class="text-center">Kurset e preferuara</h2>
  <hr />
  <br />
  <div class="float-right">
    <a href="/Course/AllCourses?search=@string.Empty" class="btn btn-dark">Lista e kurseve</a>
  </div> <br /><br />
  @if (Model.Count() == 0)
  {
    <p class="text-info text-center">
      Ju nuk keni asnje kurs ne listen e kurseve te preferuara.<br />
      Per te shtuar nje kurs ne kete liste vizitoni <b><a href="/Course/AllCourses">listen e kurseve</a></b>
    </p>
  }
  else
  {
    <div class="row">
      @foreach (var course in Model)
      {
        <div class="card" style="box-shadow: 10px 10px 5px #aaaaaa; margin-bottom:50px; margin-right:30px">
          <ul class="list-group list-group-flush">
            <li class="list-group-item" data-toggle="tooltip" data-placement="top" title="Hiq nga kurset e preferuara">
              <a href="/Course/AddOrRemoveCourseFromMyFavorites/@course.KursId?redirectTo=MyFavoriteCourses" class="text-decoration-none text-warning float-right"><i class="fas fa-star fa-2x"></i></a>
            </li>
          </ul>
          <div class="col-md-4 float-left">
            <img src="@MaterialPaths.CoursePhotoPath@course.Photo" style="width: 300px; height:200px" />
            <a href="/Course/CourseLevels/@course.KursId" class="text-decoration-none">
              <h3 class="text-dark">@course.Emri</h3>
            </a>
          </div>
        </div>
      }
    </div>

  }
</div>

